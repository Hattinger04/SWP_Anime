@model List<Anime_Website.Models.AnimeObject>

<script src="~/js/site.js" asp-append-version="true"></script>


@* Sollte man noch mit einer Liste + Schleife lösen *@
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="7500" data-pause="false">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/4.jpg" alt="Third slide">
        </div>

        @* Wechseln mit JavaScript, Anfangsidee
             <div class="background-container">
                <img id="img" class="background-picture-home" src="../images/1.jpg" />
            </div>*@
    </div>
</div>


<div class="container">
    <div class="row hallo"></div>
    <div class="row" style="height: 50vh">

        <form asp-controller="home" asp-action="index" method="post">
            <input id="search_anime" autocomplete="off" type="text" placeholder="search for an anime" name="search_anime">
            <button>Button</button>
        </form>
        @if (Model != null && Model.Count() != 0) {
            foreach (AnimeObject obj in Model) {
                <div id="searchresults" class="cards">
                    <a href=@obj.URL>
                        <div class="card__image">
                            <img loading="lazy" src=@obj.Image_URL alt=@obj.Name />
                        </div>
                        <div class="card__name">
                            <span>@obj.Name</span>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>