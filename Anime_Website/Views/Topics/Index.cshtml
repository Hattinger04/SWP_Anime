
@{
    ViewData["Title"] = "Index";
}

<h1>Topics</h1>

@{ for (int i = 1; i < 12; i = i + 2)
    {
        <div class="row amArsch">
            <div class="col-sm-1"></div>
            <div class="col-sm-4 border">
                <div class="row">
                    <div class="col-sm-2">
                        <h4>@i.</h4>
                    </div>
                    <div class="col-sm-10">
                        <h4>Julius</h4>
                    </div>
                </div>
                <div class="row">
                    <img src="~/200.png" alt="Profilfoto" class="img-thumbnail">
                </div>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-4 border">
                <div class="row">
                    <div class="col-sm-2">
                        <h4>@(i+1).</h4>

                    </div>

                    <div class="col-sm-10">
                        <h4>Simon</h4>
                    </div>
                </div>
                <div class="row">
                    <img src="~/200.png" alt="Profilfoto" class="img-thumbnail">
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
    }
}